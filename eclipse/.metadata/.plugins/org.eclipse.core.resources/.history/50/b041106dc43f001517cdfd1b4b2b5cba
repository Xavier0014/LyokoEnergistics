package com.xavier0014.lyokoenergistics.gui;

import com.xavier0014.lyokoenergistics.reference.Reference;

import net.minecraft.client.gui.Gui;
import net.minecraft.util.ResourceLocation;

public class Energy extends Gui{
	
	private double energieStore;
	public static final ResourceLocation texture = new ResourceLocation(Reference.MOD_id,"textures/gui/energyGui.png");
	private int a = 0,b = 0,c = 0,d = 0;
	public Energy(int energieStore,int energieMax) {
		this.energieStore = (energieStore*61)/energieMax;
	}
	
	public void renderEnergie(int x,int y){
		System.out.println(energieStore);
		
		if (energieStore >= 0 && energieStore <= 7) {
			a = (int) (energieStore*4);
			b = 0;
			c = 0;
			d = 0;
		}
		if (energieStore >= 7 && energieStore <= 15) {
			a = (int) (energieStore*4);
			b = (int) ((energieStore*4)-7);
			c = 0;
			d = 0;
		}
		if (energieStore >= 15 && energieStore <= 23) {
			a = 61;
			b = (int) ((energieStore*4)-7);
			c = 0;
			d = 0;
		}
		if (energieStore >= 23 && energieStore <= 30) {
			a = 61;
			b = 61;
			c = (int) ((energieStore*4)-23);
			d = 0;
		}
		if (energieStore >= 30 && energieStore <= 37) {
			a = 61;
			b = 61;
			c = (int) ((energieStore*4)-23);
			d = 0;
		}
		if (energieStore >= 37 && energieStore <= 44) {
			a = 61;
			b = 61;
			c = 61;
			d = (int) ((energieStore*4)-37);
		}
		if (energieStore >= 44 && energieStore <= 51) {
			a = 61;
			b = 61;
			c = 61;
			d = (int) ((energieStore*4)-37);
		}
		this.drawTexturedModalRect(x, (int) (y +(61 -a)) , 1, 1, 3, (int) a);
		this.drawTexturedModalRect(x, (int) (y +(61 -b)) , 1, 1, 3, (int) b);
		this.drawTexturedModalRect(x, (int) (y +(61 -c)) , 1, 1, 3, (int) c);
		this.drawTexturedModalRect(x, (int) (y +(61 -d)) , 1, 1, 3, (int) d);
	}
}
